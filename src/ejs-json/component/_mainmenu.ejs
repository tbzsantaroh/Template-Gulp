      </ul></nav>
    </header>
  </div><%# .spnav %>
</div><%# .spnav-wrap %>


<div class="lang-select"><%# 言語セレクトボタン %>
  <a class="lang-link" href="#inline1" data-rel="lightcase" title="Language Select"><%# 常時左上に出てるボタン %>
    <ul class="thum-img">
      <% const langSelect_FilenameArray = ['ja', 'en', 'tc', 'sc']; %><%# 変数 ファイル名とalt %>
      <% langSelect_FilenameArray.forEach((value) => {
      %><li><img src="img/base/lang-<%= value %>.svg" alt="<%= value %>"></li>
      <% }); %>
    </ul>
  </a>

  <div class="lang-select-popup" id="inline1" style="display: none;"><ul><%# 左上のボタン押すとポップアップしてくる言語選択ボタン %>
<% const LangSelectPopup_array = [
  ['', 'ja', 'ja', '日本語'],
  ['-en', 'en', 'en', 'English'],
  ['-tc', 'zh-cmn-Hant', 'tc', '繁體中文'],
  ['-sc', 'zh-cmn-Hans', 'sc', '简体中文']] %>
<% for (let i = 0, len = LangSelectPopup_array.length; i < len; ++i) { 
  %>    <li><a href ="<%= data.PageUrl %><%= LangSelectPopup_array[i][0] %>.html" lang="<%= LangSelectPopup_array[i][1] %>"><img src="img/base/lang-<%= LangSelectPopup_array[i][2] %>.svg" alt="<%= LangSelectPopup_array[i][2] %>"><br><%= LangSelectPopup_array[i][3] %></a></li>
<% }; %>
  </ul></div><%# .lang-select-popup #inline1 %>
</div><%# .lang-select %>